<?xml version="1.0"?>
<launch>
  <!-- ARGOMENTI -->
  <arg name="robot_ip" value="172.16.0.3"/>
  <arg name="robot" default="panda" doc="choose your robot. Possible values: [panda, fr3]"/>
  <arg name="arm_id" default="panda" doc="Name of the panda robot to spawn"/>
  <arg name="load_gripper" default="true"/>
  <arg name="xacro_args" default=""/>
  <arg name="use_rviz" default="true"/>

  <!-- NODO DI CONTROLLO FRANKA -->
  <node name="franka_control"
        pkg="franka_control"
        type="franka_control_node"
        output="screen"
        required="true">
    <rosparam command="load"
              file="$(find franka_control)/config/franka_control_node.yaml"
              subst_value="true"/>
    <param name="robot_ip" value="$(arg robot_ip)"/>
  </node>

  <!-- DESCRIZIONE ROBOT -->
  <param name="robot_description"
         command="$(find xacro)/xacro $(find franka_description)/robots/$(arg robot)/$(arg robot).urdf.xacro hand:=$(arg load_gripper) arm_id:=$(arg arm_id) $(arg xacro_args)"/>

  <!-- FRANKA GRIPPER (opzionale) -->
  <include file="$(find franka_gripper)/launch/franka_gripper.launch" if="$(arg load_gripper)">
    <arg name="robot_ip" value="$(arg robot_ip)"/>
    <arg name="arm_id" value="$(arg arm_id)"/>
  </include>

  <!-- CARICAMENTO PARAMETRI DEI CONTROLLER -->
  <rosparam command="load"
            file="$(find franka_example_controllers)/config/franka_example_controllers.yaml"
            subst_value="true"/>

  <!-- SPAWNER DEI CONTROLLER PRINCIPALI -->
  <node name="controller_spawner"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        args="cartesian_impedance_example_controller"/>

  <!-- PUBLISHER DELLO STATO DEL ROBOT -->
  <node name="robot_state_publisher"
        pkg="robot_state_publisher"
        type="robot_state_publisher"
        output="screen"/>

  <!-- PUBLISHER DELLO STATO DEI GIUNTI -->
  <node name="joint_state_publisher"
        pkg="joint_state_publisher"
        type="joint_state_publisher"
        output="screen">
    <rosparam if="$(arg load_gripper)"
              param="source_list">[franka_state_controller/joint_states, franka_gripper/joint_states]</rosparam>
    <rosparam unless="$(arg load_gripper)"
              param="source_list">[franka_state_controller/joint_states]</rosparam>
    <param name="rate" value="30"/>
  </node>

  <!-- REALSENSE CAMERA -->
  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
    <arg name="enable_color" value="true"/>
    <arg name="enable_depth" value="true"/>
    <arg name="align_depth" value="true"/>
  </include>

  <!-- NODI FRANKA_ART -->
  <node pkg="franka_art"
        type="hand_to_pose_alpha.py"
        name="hand_to_pose"
        output="screen"/>

  <node pkg="franka_art"
        type="gesture_recognizer_test.py"
        name="gesture_recognizer"
        output="screen">
    <param name="model_path"
           value="$(find franka_art)/models/gesture_recognizer.task"/>
  </node>


</launch>

